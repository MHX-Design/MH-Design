RewriteEngine On

# Remove trailing slash (optional, for consistency)
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.+)/$ /$1 [R=301,L]

# Redirect .html URLs to clean URLs (this prevents .html from showing)
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s/+index\.html[\s?] [NC]
RewriteRule ^ /? [R=301,L]

RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s/+(.+?)\.html[\s?] [NC]
RewriteRule ^ /%1? [R=301,L]

# Handle root index (empty URL should load index.html)
RewriteRule ^$ index.html [L]

# Handle subdirectory files (projects folder)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^projects/([^/]+)/?$ projects/$1.html [L]

# Handle root level files
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^([^/]+)/?$ $1.html [L]